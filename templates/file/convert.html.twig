{% extends 'file/file_action.html.twig' %}

{% block title %}Convert Extension
{% endblock %}
{% block header %}Convert File Extension
{% endblock %}
{% block stylesheets %}
	{{ vite_entry_link_tags('appconvert') }}
{% endblock %}
{% block javascripts %}
	{{ vite_entry_script_tags('appconvert') }}
{% endblock %}
{% block description %}Upload a file and convert its extension effortlessly.
{% endblock %}
{% block content %}
	<input type="file" class="filepond mb-3" name="filepond" accept="image/png, image/jpeg, image/gif"/>
	<select class="form-select mb-3">
		<option value="jpeg">JPEG</option>
		<option value="png">PNG</option>
		<option value="gif">GIF</option>
	</select>
	<button class="btn btn-primary btn-lg rounded-pill px-5 shadow">Convert</button>
{% endblock %}
